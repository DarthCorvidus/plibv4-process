<?xml version="1.0"?>
<psalm
    errorLevel="1"
	phpVersion="8.2"
    resolveFromConfigFile="true"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="https://getpsalm.org/schema/config"
    xsi:schemaLocation="https://getpsalm.org/schema/config vendor/vimeo/psalm/config.xsd"
    findUnusedBaselineEntry="true"
    findUnusedCode="false"
>
	<issueHandlers>
		<ClassMustBeFinal>
			<errorLevel type="suppress">
				<directory name="src" />
			</errorLevel>
		</ClassMustBeFinal>
		<!--
		The purpose of TrackObserver is to track how often test methods were
		called; part of the tests are to check that the wrong observer method
		has not called as well. Psalm is not able to understand it.
		-->
		<RedundantConditionGivenDocblockType>
			<errorLevel type="suppress">
				<file name="tests/timeshare/TrackObserverTest.php" />
			</errorLevel>
		</RedundantConditionGivenDocblockType>
		<DocblockTypeContradiction>
			<errorLevel type="suppress">
				<file name="tests/timeshare/TrackObserverTest.php" />
				<file name="tests/timeshare/TimeshareTest.php" />
			</errorLevel>
		</DocblockTypeContradiction>
	</issueHandlers>
		
	<projectFiles>
        <directory name="src" />
		<directory name="tests" />
        <ignoreFiles>
            <directory name="vendor" />
        </ignoreFiles>
    </projectFiles>
</psalm>
